@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Projetos";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.slimscroll.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/syte.js")" type="text/javascript"></script> 




<div class="row" style="height:100vh">
    <div id="sidebar-left" class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="width:23vw;height:inherit;margin-right:2vw">
        <div id="divList" class="panel panel-primary" style="width:inherit">
            <div class="panel-heading">
                <h3>Lista de Projetos
                    <button class="btn btn-danger" onclick="window.location.href = '@Url.Action("Create","Projects")'"
                            type="button" data-toggle="tooltip" data-placement="right" title="Criar Projeto" 
                            style="margin-left: 6vw;">
                        <strong style="font-size:x-large;font-family:Arial">+</strong>
                    </button>
                </h3>
                
            </div>
                <div id="inner-content-div" class="panel-body bs-component">
                <ul id="ulProjectList" class="nav nav-pills nav-stacked">
                    @{Html.RenderAction("LoadProjectList", "Projects", new { listType = "retrieveData" });}
                </ul>
            </div>
        </div>
    </div>
  
    <div id="projectData" class="right panel-body col-lg-8 col-md-8 col-sm-8 col-xs-8"   style=" height:inherit;width:73vw">
            <h2>Editar Projeto</h2>
            <h6>Selecione um projeto da lista.</h6>
    </div>
  
</div>


<script type="text/javascript">
    $(function () {

        $('#inner-content-div').slimScroll({
            height: '75vh'
        });

    });
</script>

