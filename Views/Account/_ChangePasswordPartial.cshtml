@using Microsoft.AspNet.Identity
@model WebApplication.Models.ManageUserViewModel


<div class="row well bs-component center">
    <div class="col-md-12">
        <section id="changePasswordForm">

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <h4 class="center">Você está conectado como <strong style="color:blanchedalmond">@User.Identity.GetUserName()</strong>.</h4>

    <hr />
    @Html.ValidationSummary()
    <div class="form-group" style="margin-top:-5vh">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label col-md-offset-1" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-md-12 col-xs-18 col-md-offset-1" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label col-md-offset-1" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-md-12 col-xs-18 col-md-offset-1" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label col-md-offset-1" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-12 col-xs-18 col-md-offset-1" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top:2vh" />
        </div>
    </div>
        </fieldset>
}
</section>
</div>
</div>