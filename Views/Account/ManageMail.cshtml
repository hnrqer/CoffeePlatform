@using Microsoft.AspNet.Identity
@model WebApplication.Models.ManageMailViewModel

@{
    ViewBag.Title = "Alterar E-mail";
}

<h2>Alterar E-mail</h2>


<div class="row well bs-component center">
    <div class="col-md-12">
        <section id="changeMailForm">
            @using (Ajax.BeginForm("ManageMail", "Account", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId ="resultMessage",InsertionMode=InsertionMode.Replace}, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <h4 class="center">Você está conectado como <strong style="color:blanchedalmond">@User.Identity.GetUserName()</strong>.</h4>
                    <hr />
                    @Html.ValidationSummary()
                    <p id="resultMessage"> </p>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-12 control-label" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top:2vh" />
                        </div>
                    </div>
                </fieldset>
            }
        </section>
    </div>
</div>

