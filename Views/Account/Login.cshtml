@model WebApplication.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2 class="center">@ViewBag.Title.</h2>
<div class="row well bs-component center">

            <div class="col-md-12">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        
                        @Html.AntiForgeryToken()
    <fieldset>
        <h4>Utilize uma conta já cadastrada para efetivar Log in.</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group " >
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-12 col-md-offset-1" })
            <div >
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-12 col-xs-18 col-md-offset-1" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-12 col-md-offset-1" })
            <div >
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-12 col-xs-18 col-md-offset-1" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-12">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
        </div>
        
            <p class="col-md-12 col-md-offset-1">
                Não possui uma conta? @Html.ActionLink("Registre-se já!", "Register")
            </p>
        
</fieldset>
                    }

                </section>
            </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}